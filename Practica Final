        // EJERCICIO 1
        int a = 3; 
        int b = 78;
        int c = 703;  
	
        if (a >= b && a >= c) // Se usa && en lugar de "and"
        {
            Console.WriteLine("El valor A es mayor"); 
        }
        else if (b >= a && b >= c)
        {
            Console.WriteLine("El valor B es mayor"); 
        }
        else
        {
            Console.WriteLine("El valor C es mayor"); 
        }

        a = 1; 
        b = 10;
        c = 100;  

        if (a >= b && a >= c)
        {
            Console.WriteLine("El valor A es mayor"); 
        }
        else if (b >= a && b >= c)
        {
            Console.WriteLine("El valor B es mayor"); 
        }
        else
        {
            Console.WriteLine("El valor C es mayor"); 
        }

        a = 8; 
        b = 96;
        c = 321;  

        if (a <= b && a <= c)
        {
            Console.WriteLine("El valor A es menor"); 
        }
        else if (b <= a && b <= c)
        {
            Console.WriteLine("El valor B es menor"); 
        }
        else
        {
            Console.WriteLine("El valor C es menor"); 
        }

        // EJERCICIO 3
        int HH, MM, SS;
        
        Console.Write("Ingresa la hora: ");
        HH = Convert.ToInt32(Console.ReadLine());
        
        Console.Write("Ingresa los minutos: ");
        MM = Convert.ToInt32(Console.ReadLine());
        
        Console.Write("Ingresa los segundos: ");
        SS = Convert.ToInt32(Console.ReadLine());
        
        SS++; 
        if (SS >= 60)
        {
            SS = 0; 
            MM++; 
        }
        if (MM >= 60)
        {
            MM = 0; 
            HH++; 
        }
        
        Console.WriteLine($"La hora es: {HH:D2}:{MM:D2}:{SS:D2}"); 

        // EJERCICIO 4
        double distancia;
        double precioporKm = 2.5;
        double precioTotal;
        int diasEstancia;

        Console.Write("Ingrese la distancia a recorrer en km: ");
        distancia = Convert.ToDouble(Console.ReadLine());

        Console.Write("Ingrese los días de estancia: ");
        diasEstancia = Convert.ToInt32(Console.ReadLine());

        precioTotal = distancia * diasEstancia * precioporKm;

        if (diasEstancia > 7 && distancia > 800)
        {
            precioTotal *= 0.7; // Aplicar descuento
            Console.WriteLine($"Precio Total con descuento: ${precioTotal}");
        }
        else
        {
            Console.WriteLine($"Precio Total: ${precioTotal}");
        }


