Practa E
        // Ejercicio 1
        string respuesta;
        do
        {
            Console.WriteLine("Quieres salir  del ciclo [SI/NO]");
            respuesta = (Console.ReadLine());
            if (respuesta.ToUpper() == "SI")
            {
                Console.WriteLine("Ciclo terminado.");
                break;
            }
            else if (respuesta == "NO")
            {
                Console.WriteLine("Volvemos a preguntar... ");
            }
            else
            {
                Console.WriteLine("Respuesta no valida. Contestar SI o NO");
            }
        } while (true);


        // Ejercicio 2 
        int numero1 = 0;
        int numero2 = 0;
        int total = 0;
        char opcion;

        do
        {
            Console.WriteLine("Menu de opciones");
            Console.WriteLine("a) (+) Suma de dos operandos");
            Console.WriteLine("b) (-) Resta de dos operandos");
            Console.WriteLine("c) (*) Multiplicacion de dos operandos");
            Console.WriteLine("d) (/) Division de dos operandos");
            Console.WriteLine("e) (%) Residuo de dos operandos");
            Console.WriteLine("s) (s) Salir");
            opcion = Console.ReadLine()[0];

            if (opcion == 's')
            {
                Console.WriteLine("Saliendo del menu...");
                break;
            }

            Console.WriteLine("Ingrese el primer numero: ");
            numero1 = int.Parse(Console.ReadLine());
            Console.WriteLine("Ingrese el segundo numero: ");
            numero2 = int.Parse(Console.ReadLine());

            switch (opcion)
            {
                case 'a':
                    total = numero1 + numero2;
                    Console.WriteLine("Resultado: " + total);
                    break;

                case 'b':
                    total = numero1 - numero2;
                    Console.WriteLine("Resultado: " + total);
                    break;

                case 'c':
                    total = numero1 * numero2;
                    Console.WriteLine("Resultado: " + total);
                    break;

                case 'd':
                    total = numero1 / numero2;
                    Console.WriteLine("Resultado: " + total);
                    if (numero2 != 0)
                    {
                        total = numero1 / numero2;
                        Console.WriteLine("Resultado: " + total);
                    }
                    else
                    {
                        Console.WriteLine("Error...");
                    }
                    break;

                case 'e':
                    if (numero2 != 0)
                    {
                        total = numero1 % numero2;
                        Console.WriteLine("Resultado: " + total);
                    }
                    else
                    {
                        Console.WriteLine("Error.");
                    }
                    break;

                default:
                    Console.WriteLine("Opcion no valida");
            }
        } while (true);

        //Ejercicio 3
        string tarjeta;
        string pin;
        float saldo = 1000_0;
        float montoRetiro;
        char operacion;

        Console.WriteLine("Ingrese el numero de tarjeta (chip/banda): ");
        tarjeta = Console.ReadLine();

        if (tarjeta != "1234567890")
        {
            Console.WriteLine("Tarjeta invalida. Proceso terminado...");
        }

        Console.WriteLine("Ingrese su PIN (4 digitos): ");
        pin = Console.ReadLine();

        if (pin != "1234")
        {
            Console.WriteLine("PIN valido");
        }

        do
        {
            Console.WriteLine("Menu del cajero: ");
            Console.WriteLine("a) Consulta de saldo");
            Console.WriteLine("b) Retiro de dinero");
            Console.WriteLine("c) Cancelar operacion");
            operacion = Console.ReadLine()[0];
            switch (operacion)
            {
                case 'a':
                    Console.WriteLine("Su saldo actual es: $" + saldo);
                    break;
                case 'b':
                    Console.WriteLine("Ingrese el monto a retirar: $");
                    montoRetiro = float.Parse(Console.ReadLine());
                    if (montoRetiro > saldo)
                    {
                        Console.WriteLine("Error: No tiene suficiente saldo para realizar este retiro.");
                    }
                    else if (montoRetiro <= 0)
                    {
                        Console.WriteLine("Error: El monto de retiro debe ser positivo.");
                    }
                    else
                    {
                        saldo -= montoRetiro;
                        Console.WriteLine("Retiro exitoso. Su saldo restante es: $" + saldo);
                    }
                    break;

                case 'c':
                    Console.WriteLine("Operacion cancelada.");
                    break;

                default:
                    Console.WriteLine("Opcion no valida.");
                    break;
            }

            if (opcion != 'c')
            {
                Console.WriteLine("Desea realizar otra operacion?: ");
                char continuar;
                continuar = Console.ReadLine()[0];

                if (continuar == 'n')
                {
                    Console.WriteLine("Operaciones terminadas.");
                    break;
                }
            }

        } while (true);
    }
    // Ejercicio 4 
    {
        Random rand = new Random();
        int castigo = 0;
        int vida = 12;
        int premio = 0;

        Console.WriteLine("Vida inicial " + vida);

        while (vida > 0)
        {
            //Deducir uno vida 
            vida--;
            Console.WriteLine("Costo de ciclo " + vida);

            // Castigo? 
            castigo = rand.Next() % 2;
            if (castigo == 1)
            {
                vida = vida - 3;
                Console.WriteLine("Castigo " + vida);
            }
            premio = rand.Next() % 2;
            if (premio == 1)
            {
                vida += 3;
                Console.WriteLine("Premio " + vida);
            }
            Console.WriteLine("Vida despues de ciclo " + vida);
        }

