Practica I
    //Sudoku 
    int [,] matriz=
{
    { 0,3,0,0,0,0,0,0,0},
    { 0,2,0,9,0,6,3,0,0},
    { 0,6,0,4,0,2,0,9,0}, 
    { 1,0,0,0,9,0,4,0,0},
    { 0,0,8,1,0,3,5,0,0},
    { 0,0,5,0,7,0,0,0,3},
    { 0,5,0,3,0,1,0,6,0},
    { 0,0,4,6,0,7,0,3,0},
    { 0,0,0,0,0,0,0,8,0}
    };
    for (int i = 0; i < 9; i++)
    {
        for (int j = 0; j < 9; j++)
        {
            Console.WriteLine(matriz[i , j] + "");
        }
    }
}

        
