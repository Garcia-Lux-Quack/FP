            Console.WriteLine ("vii: "+((a * b) > 500));
            Console.WriteLine ("viii: "+((a * b) < 100));
            Console.WriteLine ("ix: "+((a - b) < 0));
            Console.WriteLine ("x: "+(a < 20));
