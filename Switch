#include <iostream>
using namespace std;

int main()
{
	int numMes = 0; 
	cout << "Numero de mes: "; 
	cin >> numMes; 
	switch (numMes)
	{
	case 1: 
		cout << "Enero" << endl; 
		break; 
	case 2: 
		cout << "Febrero" << endl; 
	case 3: 
		cout << "Marzo" << endl; 
	case 4:
		cout << "Abril" << endl;
		break;
	case 5:
		cout << "Mayo" << endl;
	case 6:
		cout << "Junio" << endl;
	case 7:
		cout << "Julio" << endl;
		break;
	case 8:
		cout << "Agosto" << endl;
	case 9:
		cout << "Septiembre" << endl;
	case 10:
		cout << "Octubre" << endl;
		break;
	case 11:
		cout << "Noviembre" << endl;
	case 12:
		cout << "Diciembre" << endl;
	default:
		cout << "Mes invalido" << endl; 
		break;
	}
}
