// Practica 8.cpp : Este archivo contiene la función "main". La ejecución del programa comienza y termina ahí.
//

#include <iostream>
using namespace std; 
int main()

{
    int n1, n2; 
    cout << "n1: "; 
    cin >> n1; 
    cout << "n2: "; 
    cin >> n2; 
    cout << endl; 

    if (n1 > n2)
    {
        cout << "n1: " << n1 << endl;
    }
    else 
    {
        cout << "n2: " << n2 << endl; 
    }
   
    {
        int edad;
        cout << "dame tu edad: ";
        cin >> edad;
        cout << endl;
        if (edad >= 18)
        {
            cout
                << "mayor de edad"
                << endl;
        }
        else
            cout << "menor de edad" << endl; 
    }
    int temp;
    cout << "cuál es la temperatura: "; 
    cin >> temp; 
    cout << endl;

    if (temp < 10); 
    {
        cout << "Hace mucho frío: " << endl; 
    }
    if (temp >= 10 and temp <= 17)
    {
        cout << "Hace frío: " << endl;
    } 
    else
    {
        cout << "Hace mucho frío: " << endl;
    } 
    {
        char voto;
        cout << "A favor s/n : ";
        cin >> voto;
 
    if (voto == 's' or voto == 'n' or voto == 'S' or voto == 'N')
    {
        cout << "Voto registrado: " << endl;
    } 
    else
    {
        cout << "Voto inválido: " << endl;
    } 
    
    {
        int horasTrabajadas = 0;
        cout << "Horas trabajadas: ";
        cin >> horasTrabajadas;
        cout << endl;
        int horasBono = horasTrabajadas - 40;
        if (horasBono > 0)
        {
            horasBono = horasBono * 75;
            cout << "Bono: " << horasBono << endl;
        }
        else
        {
            cout << "No hay bono: " << endl;
        }
        return ;
    } 
