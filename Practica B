// PracticaB.cpp : Este archivo contiene la función "main". La ejecución del programa comienza y termina ahí.
//

#include <iostream>
using namespace std;

int main()
{
	//Ejercicio 1.1
	// 1
	cout << "Problema 1: " << (3 + 5 * 2 / 2 - 1);
	cout << endl;
	// 2 
	cout << "Problema 2: " << (3 + 5 / 2 - 1);
	cout << endl;
	// 3
	cout << "Problema 3: " << (3 + 5 - 1);
	cout << endl; 
	// 4 
	cout << "Problema 4: " << (8 - 1);
	cout << endl; 
	// 5 
	cout << "Problema 5: " << (1 / 3 * 3);
	cout << endl; 

	//Ejercio 1.2 
	int num = 4; 
	cout << "Ejercicio 1.2: " << (num * num);
	cout << endl; 

	//Ejercicio 1.3 
	double yardas = 9.144; 
	cout << "Ejercicio 1.3: " << (10 * yardas / 1);
	cout << endl; 

	//Ejercicio 1.4 
	double valor = 200000; 
	cout << "Resultado:" << (valor * 0.8);
	cout << endl; 
	double depreciar = 160000; 
	cout << "Resultado: " << (depreciar / 5);
	cout << endl; 

	//Ejercicio 1.5 
	double sueldo = 25000; 
	cout << "Parcial: " << (sueldo - 900);
	cout << endl; 
	double parcial = 24100; 
	cout << "Impuesto: " << (parcial * 0.015); 
	cout << endl; 

	//Ejercicio 1.6
	cout << "Problema 1: " << (3 * 4); 
	cout << endl; 
	cout << "Problema 2: " << (12 / 3); 
	cout << endl; 
	cout << "Problema 3: " << (12 % 3); 
	cout << endl; 
	cout << "Problema 4: " << (12 % 7); 
	cout << endl; 
	cout << "Problema 5: " << (3 + 3.0); 
	cout << endl; 
	cout << "Problema 6: " << (10 / 100); 
	cout << endl; 

	//Ejercicio 1.7
	double a = 10; 
	double b = 20; 
	cout << "i: " << (a > b); 
	cout << endl; 
	cout << "ii: " << (a < b); 
	cout << endl; 
	cout << "iii: " << (a == b); 
	cout << endl; 
	cout << "iv: " << (a != b);
	cout << endl; 
	cout << "v: " << ((a + b) > 100);
	cout << endl; 
	cout << "vi: " << ((a - b) == 0);
	cout << endl; 
	cout << "vii: " << ((a * b) > 500); 
	cout << endl; 
	cout << "viii: " << ((a * b) < 100); 
	cout << endl; 
	cout << "ix: " << ((a - b) < 0); 
	cout << endl; 
	cout << "x: " << (a < 20); 
	cout << endl; 
}


